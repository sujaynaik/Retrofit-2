    <style name="textViewBlackTitle" parent="textViewBlackExtraLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="textViewGreySubTitle" parent="textViewLarge">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="textViewLightBlackSubTitle" parent="textViewLarge">
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="textViewItalic" parent="textViewMedium">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Edittext -->
    <style name="normal_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_d</item>
        <!--<item name="android:textCursorDrawable">@drawable/text_cursor_gray_3</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <!--<item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>-->
        <!--<item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>-->
    </style>

    <style name="form_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_d</item>
        <!--<item name="android:textCursorDrawable">@drawable/text_cursor_gray_3</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:imeOptions">actionNext</item>
        <!--<item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>-->
        <!--<item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>-->
    </style>

    <style name="login_edittext_style" parent="normal_edittext_style">
        <!--<item name="android:background">@drawable/edittext_login</item>-->
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textColorHint">@color/blue_grey</item>
        <item name="android:textColor">@color/off_white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="core_edittext_style" parent="normal_edittext_style">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@null</item>
        <item name="android:padding">2dp</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <style name="core_edittext_style2" parent="core_edittext_style">
        <item name="android:textColor">@color/off_white</item>
        <item name="android:textColorHint">@color/gray_a</item>
    </style>

    <!--- Spinner -->
    <style name="spinner_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Line -->
    <style name="line_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7sp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="line_grey" parent="line_black">
        <item name="android:background">@color/gray_b</item>
    </style>

